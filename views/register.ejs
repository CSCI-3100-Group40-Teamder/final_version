<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<!DOCTYPE html>
<html>
    
<head>
    <title>Sign up</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<link rel="icon" href="../uploads/Teamder_icon.jpg">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link type="text/css" rel="stylesheet" href="/css/register.css" />
</head>

<body>
	
	<div class="container h-100">
		<div class="d-flex justify-content-center h-100">
			<div class="user_card">
				<div class="d-flex justify-content-center">
					<div class="brand_logo_container">
						<a href="/index"><img src="/uploads/Teamder_icon.jpg	" class="brand_logo" alt="Logo"></a>
					</div>
				</div>
				<div class="d-flex justify-content-center form_container">
                    <form name="register-form" action="/login-system/register" method="POST">
                        <% if (typeof messages.reg_error !== 'undefined' ){ %>
                            <div class="error-message"><%= messages.reg_error %></div>
                        <% } %>
                        <div class="input-group mb-2">
                            <input type="text" id="first_name" name="first_name" class="form-control input_user" placeholder="First Name" required >
							<input type="text" id="last_name" name="last_name" class="form-control input_user" placeholder="Last Name" required >
                        </div>
                        <div class="input-group mb-2">
							<input type="text" id="nickname" name="nickname" class="form-control input_user" placeholder="Username (Optional)" >
                        </div>
                        <div class="input-group mb-2">
                            <input type="text" id="phone_number" name="phone_number" class="form-control input_user" placeholder="Phone Number" required >
                        </div>
                        <div class="input-group mb-2">
                        	<label for="sex"> Sex </label>
	                        <select type="text" id="sex" name="sex" class="form-control input_user" required>
	                        		<option value="" disabled selected>Sex</option>
	                            	<option value="M">M</option>
	                            	<option value="F">F</option>
	                        </select>
	                        <label for="birthdate"> Age </label>
	                        <input id="birthdate" name="birthdate" class="form-control input_user" required type="number" min="1" max="100" value="1">
                        </div>
                        <div class="input-group mb-2">
							<input type="text" id="email" name="email" class="form-control input_user" placeholder="Email" required >
						</div>
                        <div class="input-group mb-2">
							<input type="password" id="password" name="password"  class="form-control input_pass" placeholder="Password ( >5 characters)" minlength="6" required>
                        </div>
					<div class="d-flex justify-content-center mt-3 login_container">
				 	    <button type="submit" class="btn login_btn">Register</button>
				   </div>
					</form>
				</div>
		
				<div class="mt-4">
					<div class="d-flex justify-content-center login-url">
						Already registered? <a href="/login-system/login" class="ml-2">Login</a>
					</div>
                </div>
				</div>
			</div>
		</div>
	</div>

</body>
</html>
